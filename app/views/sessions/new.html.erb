<h1>Login</h1>
<%= form_tag '/login' do %>
  <table class="table">
    <tbody>
      <tr>
        <td>Email: </td>
        <td><%= text_field_tag :email %></td>
      </tr>
      <tr>
        <td>Password: </td>
        <td><%= password_field_tag :password %></td>
      </tr>
      <tr>   
        <td></td>
        <td><%= submit_tag "Login" %></td>
      </tr>
    </tbody>
  <table>
<% end %>